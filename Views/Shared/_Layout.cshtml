<!DOCTYPE html>
<html lang="en" data-ng-app="restaurantApp">
<head>
    <meta charset="utf-8" />
    
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/bootstrap")
    @Styles.Render("~/bundles/fileupload/bootstrap/BasicPlusUI/css")
            
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("https://ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular.js");

    
    @RenderSection("header", required: false)
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <!-- Bootstrap CSS fixes for IE6 -->
    <!--[if lt IE 7]><link rel="stylesheet" href="/Content/FileUpload/css/bootstrap/bootstrap-ie6.debug.css"><![endif]-->

    <!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"><![endif]-->
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("your logo here", "Index", "Home")</p>

            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul class="nav nav-pills" data-ng-controller="navigationCtrl as navCtrl">
                        <li data-ng-class="{active:navCtrl.isSet(1)}" data-ng-click="navCtrl.setTab(1)">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li data-ng-class="{active:navCtrl.isSet(2)}" data-ng-click="navCtrl.setTab(2)">@Html.ActionLink("RWD", "TestingRWD", "Home")</li>
                        <li data-ng-class="{active:navCtrl.isSet(3)}" data-ng-click="navCtrl.setTab(3)">@Html.ActionLink("Angular", "TestingAngularJS", "Home")</li>
                        <li data-ng-class="{active:navCtrl.isSet(4)}" data-ng-click="navCtrl.setTab(4)">@Html.ActionLink("About", "About", "Home")</li>
                        <li data-ng-class="{active:navCtrl.isSet(5)}" data-ng-click="navCtrl.setTab(5)">@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li data-ng-class="{active:navCtrl.isSet(1)}" data-ng-click="navCtrl.setTab(1)"><a href="/index.html">SPA</a></li>

                        @{
                            if (Request.Cookies["UserName"] != null)
                            {
                                <li>@Html.ActionLink("My Profile", "MyProfile", "Home")</li>                            }
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year -  ViFuturen Inc.</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/Scripts/app/app.js");

   
    
    @RenderSection("scripts", required: false)
</body>
</html>
